<UserControl x:Class="WpfApp1.Users"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DataGrid x:Name="ServicesGrid"
      AutoGenerateColumns="False"
      CanUserAddRows="False"
      IsReadOnly="True"
      Margin="10">
        <DataGrid.Columns>
            <DataGridTextColumn Header="id" Binding="{Binding id}" />
            <DataGridTextColumn Header="name" Binding="{Binding name}" />
            <DataGridTextColumn Header="email" Binding="{Binding email}" />
            <DataGridTextColumn Header="bio" Binding="{Binding bio}" />
            <DataGridTextColumn Header="skills" Binding="{Binding skills}" />
            <DataGridTextColumn Header="latitude" Binding="{Binding latitude}" />
            <DataGridTextColumn Header="longitude" Binding="{Binding longitude}" />
            <DataGridTextColumn Header="location" Binding="{Binding location}" />
            <DataGridTextColumn Header="created_at" Binding="{Binding created_at}" />
            <DataGridTextColumn Header="is_verified" Binding="{Binding is_verified}" />
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
