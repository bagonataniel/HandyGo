<UserControl x:Class="WpfApp1.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <UserControl.Resources>
        <SolidColorBrush x:Key="tableBg" Color="#1e293b"/>
        <SolidColorBrush x:Key="darkBg" Color="#0f172a"/>
        <SolidColorBrush x:Key="Border" Color="#354458"/>
        <SolidColorBrush x:Key="primaryText" Color="#ffffff"/>
        <SolidColorBrush x:Key="secondaryText" Color="#7f97b0"/>
        <SolidColorBrush x:Key="pending" Color="#f69e0b"/>
        <SolidColorBrush x:Key="pendingBorder" Color="#f69e0b" Opacity="1"/>
        <SolidColorBrush x:Key="pendingBg" Color="#f69e0b" Opacity="0.5"/>
        <SolidColorBrush x:Key="approved" Color="#10b981"/>
        <SolidColorBrush x:Key="approvedBorder" Color="#10b981" Opacity="1"/>
        <SolidColorBrush x:Key="approvedBg" Color="#10b981" Opacity="0.5"/>
        <SolidColorBrush x:Key="rejected" Color="#f43f5e"/>
        <SolidColorBrush x:Key="rejectedBorder" Color="#f43f5e" Opacity="1"/>
        <SolidColorBrush x:Key="rejectedBg" Color="#f43f5e" Opacity="0.5"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="20">
            <Label Foreground="{StaticResource primaryText}">Admin Beállítások</Label>
            <Label Foreground="{StaticResource primaryText}">Törölj vagy adj hozzá új admin felhasználókat.</Label>
        </StackPanel>

        <Border Grid.Row="1" Background="{StaticResource tableBg}" Margin="20" CornerRadius="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition Height="8*"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"></ColumnDefinition>
                        <ColumnDefinition Width="5*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <Label Foreground="{StaticResource primaryText}" FontSize="18">Admin management</Label>
                        <Label Foreground="{StaticResource primaryText}" FontSize="15">Kezeld az összes admin felhasználót</Label>
                    </StackPanel>

                    <Border CornerRadius="5" Grid.Column="1" Background="{StaticResource darkBg}" Padding="10" VerticalAlignment="Center">
                        <TextBox BorderThickness="0" FontSize="15" Background="Transparent" Foreground="{StaticResource primaryText}" x:Name="searchbox"></TextBox>
                    </Border>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"></RowDefinition>
                        <RowDefinition Height="8*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" BorderBrush="{StaticResource Border}" BorderThickness="0 1 0 1">
                        <Grid x:Name="tableFieldContainer">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Label VerticalAlignment="Center" FontSize="15" Grid.Column="0" FontWeight="Bold" Foreground="{StaticResource secondaryText}">ADMIN NÉV</Label>
                            <Label VerticalAlignment="Center" FontSize="15" Grid.Column="1" FontWeight="Bold" Foreground="{StaticResource secondaryText}">SZEREPKÖR</Label>
                            <Label VerticalAlignment="Center" FontSize="15" Grid.Column="2" FontWeight="Bold" Foreground="{StaticResource secondaryText}">MŰVELET</Label>
                        </Grid>
                    </Border>


                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <ItemsControl ItemsSource="{Binding BookingsData}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Height="70"
        HorizontalAlignment="Stretch"
        BorderThickness="0 1 0 1"
        BorderBrush="#354458">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="5*" />
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="3*" />
                                            </Grid.ColumnDefinitions>

                                            <Label Grid.Column="0" VerticalAlignment="Center" Foreground="{StaticResource primaryText}"
                   Content="{Binding service_name}" FontSize="17" FontWeight="SemiBold"/>

                                            <Label Grid.Column="1"
               VerticalAlignment="Center"
               Foreground="{StaticResource primaryText}"
               FontSize="15"
               Content="{Binding worker_name}" />

                                            <Label Grid.Column="2"
               VerticalAlignment="Center"
               FontSize="15"
               Foreground="{StaticResource primaryText}"
               Content="{Binding client_name}" />

                                            <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                                <Label Foreground="{StaticResource secondaryText}"
                   Content="{Binding date}">
                                                </Label>
                                            </StackPanel>

                                            <StackPanel Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal" Margin="0 0 20 0">
                                                <Path Data="M480-280q83 0 141.5-58.5T680-480q0-83-58.5-141.5T480-680q-83 0-141.5 58.5T280-480q0 83 58.5 141.5T480-280Zm0 200q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Zm0-80q134 0 227-93t93-227q0-134-93-227t-227-93q-134 0-227 93t-93 227q0 134 93 227t227 93Z" Width="30" Height="20" Stretch="Uniform">
                                                    <Path.Style>
                                                        <Style TargetType="Path">
                                                            <Setter Property="Fill" Value="{StaticResource rejected}"/>

                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding status}" Value="elfogadásra vár">
                                                                    <Setter Property="Fill" Value="{StaticResource rejected}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding status}" Value="kész">
                                                                    <Setter Property="Fill" Value="{StaticResource approved}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding status}" Value="folyamatban">
                                                                    <Setter Property="Fill" Value="{StaticResource pending}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Path.Style>
                                                </Path>
                                                <Label Foreground="{StaticResource primaryText}" FontSize="15" Content="{Binding status}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
