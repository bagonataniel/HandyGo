<UserControl x:Class="WpfApp1.MainLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">
    <UserControl.Resources>
        <SolidColorBrush x:Key="Text" Color="#eff0f2"/>
        <SolidColorBrush x:Key="TextLight0" Color="#d3d4d6"/>
        <SolidColorBrush x:Key="TextLight1" Color="#6a7e96"/>
        <SolidColorBrush x:Key="TextLight2" Color="#839CB6"/>
        <SolidColorBrush x:Key="ActiveNav" Color="#137fec"/>
        <SolidColorBrush x:Key="ActiveNavBg" Color="#152a3f"/>
    </UserControl.Resources>
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"></ColumnDefinition>
                <ColumnDefinition Width="80*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" DockPanel.Dock="Top" Background="#16212C">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Border Background="#1c314d" Width="25" Height="25" CornerRadius="5" Padding="3">
                        <Path Data="M420-360h120l-23-129q20-10 31.5-29t11.5-42q0-33-23.5-56.5T480-640q-33 0-56.5 23.5T400-560q0 23 11.5 42t31.5 29l-23 129Zm60 280q-139-35-229.5-159.5T160-516v-244l320-120 320 120v244q0 152-90.5 276.5T480-80Zm0-84q104-33 172-132t68-220v-189l-240-90-240 90v189q0 121 68 220t172 132Zm0-316Z" Fill="#137fec" Stretch="Uniform" />
                    </Border>
                    <Label x:Name="homeLabel" HorizontalAlignment="Center" Foreground="{StaticResource Text}" FontWeight="Bold">HandyGo Admin</Label>
                </StackPanel>
                
                <Border x:Name="homeElement" MouseLeftButtonDown="Button_Click" Margin="10 5" HorizontalAlignment="Stretch">
                    <StackPanel Margin="2" Orientation="Horizontal">
                        <Border VerticalAlignment="Center" Width="20" Height="20">
                            <Path x:Name="homeLogo" Data="M420-360h120l-23-129q20-10 31.5-29t11.5-42q0-33-23.5-56.5T480-640q-33 0-56.5 23.5T400-560q0 23 11.5 42t31.5 29l-23 129Zm60 280q-139-35-229.5-159.5T160-516v-244l320-120 320 120v244q0 152-90.5 276.5T480-80Zm0-84q104-33 172-132t68-220v-189l-240-90-240 90v189q0 121 68 220t172 132Zm0-316Z" Fill="{StaticResource TextLight2}" Stretch="Uniform" />
                        </Border>
                        <Label x:Name="homeText" Foreground="{StaticResource TextLight2}" FontSize="20" FontWeight="Medium">Főoldal</Label>
                    </StackPanel>
                </Border>

                <Border x:Name="servicesElement" MouseLeftButtonDown="Button_Click_1" Margin="10 5" HorizontalAlignment="Stretch">
                    <StackPanel Margin="2" Orientation="Horizontal">
                        <Border VerticalAlignment="Center" Width="20" Height="20">
                            <Path x:Name="serviceLogo" Data="M420-360h120l-23-129q20-10 31.5-29t11.5-42q0-33-23.5-56.5T480-640q-33 0-56.5 23.5T400-560q0 23 11.5 42t31.5 29l-23 129Zm60 280q-139-35-229.5-159.5T160-516v-244l320-120 320 120v244q0 152-90.5 276.5T480-80Zm0-84q104-33 172-132t68-220v-189l-240-90-240 90v189q0 121 68 220t172 132Zm0-316Z" Fill="{StaticResource TextLight2}" Stretch="Uniform" />
                        </Border>
                        <Label x:Name="servicesText" Foreground="{StaticResource TextLight2}" FontSize="20" FontWeight="Medium">Szolgáltatások</Label>
                    </StackPanel>
                </Border>

                <Border x:Name="usersElement" MouseLeftButtonDown="Button_Click_2" Margin="10 5" HorizontalAlignment="Stretch">
                    <StackPanel Margin="2" Orientation="Horizontal">
                        <Border VerticalAlignment="Center" Width="20" Height="20">
                            <Path x:Name="usersLogo" Data="M420-360h120l-23-129q20-10 31.5-29t11.5-42q0-33-23.5-56.5T480-640q-33 0-56.5 23.5T400-560q0 23 11.5 42t31.5 29l-23 129Zm60 280q-139-35-229.5-159.5T160-516v-244l320-120 320 120v244q0 152-90.5 276.5T480-80Zm0-84q104-33 172-132t68-220v-189l-240-90-240 90v189q0 121 68 220t172 132Zm0-316Z" Fill="{StaticResource TextLight2}" Stretch="Uniform" />
                        </Border>
                        <Label x:Name="usersText" Foreground="{StaticResource TextLight2}" FontSize="20" FontWeight="Medium">Felhasználók</Label>
                    </StackPanel>
                </Border>

                <Border x:Name="bookingsElement" MouseLeftButtonDown="Button_Click_3" Margin="10 5" HorizontalAlignment="Stretch">
                    <StackPanel Margin="2" Orientation="Horizontal">
                        <Border VerticalAlignment="Center" Width="20" Height="20">
                            <Path x:Name="bookingsLogo" Data="M420-360h120l-23-129q20-10 31.5-29t11.5-42q0-33-23.5-56.5T480-640q-33 0-56.5 23.5T400-560q0 23 11.5 42t31.5 29l-23 129Zm60 280q-139-35-229.5-159.5T160-516v-244l320-120 320 120v244q0 152-90.5 276.5T480-80Zm0-84q104-33 172-132t68-220v-189l-240-90-240 90v189q0 121 68 220t172 132Zm0-316Z" Fill="{StaticResource TextLight2}" Stretch="Uniform" />
                        </Border>
                        <Label x:Name="bookingsText" Foreground="{StaticResource TextLight2}" FontSize="20" FontWeight="Medium">Foglalások</Label>
                    </StackPanel>
                </Border>
                
                <Button Content="Settings" Margin="5" />
                <Button Content="Profil" Margin="5"/>
            </StackPanel>
            <Grid Grid.Column="1" Background="#101922">
                <ContentControl x:Name="control"
                        Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
