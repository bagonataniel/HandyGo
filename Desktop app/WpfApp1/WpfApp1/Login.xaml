<Window x:Class="WpfApp1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="loginWindow" Height="250" Width="560">
    <Grid>
        <StackPanel>
            <WrapPanel>
                <Label Margin="10">Felhasználónév</Label>
                <TextBox Width="100" x:Name="username" Text="bagonataniel"></TextBox>
            </WrapPanel>

            <WrapPanel>
                <Label Margin="10">Jelszó</Label>
                <TextBox Width="100" x:Name="password" Text="1234"></TextBox>
            </WrapPanel>

            <Button Width="100" Click="Button_Click">Login</Button>

            <Grid>
                <Label x:Name="result"></Label>
            </Grid>
        </StackPanel>

    </Grid>
</Window>
